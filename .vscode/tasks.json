{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"command": "hugo",
			"problemMatcher": [],
			"label": "hugo: Build site",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"type": "shell",
			"command": "hugo server -D --disableFastRender --watch --port=2541 --noHTTPCache --ignoreCache",
			"problemMatcher": [],
			"label": "hugo: Serve draft site",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"type": "shell",
			"command": "hugo server --disableFastRender --watch --port=2541 --noHTTPCache --ignoreCache",
			"problemMatcher": [],
			"label": "hugo: Serve site",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"type": "shell",
			"label": "tailwind: Run with watch",
			"command": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
			"options": {
				"cwd": "${workspaceFolder}/static"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "hugo + tailwind: Serve draft site",
			"dependsOn": [
				"hugo: Serve draft site",
				"tailwind: Run with watch"
			],
			"dependsOrder": "parallel"
		},
		{
			"label": "hugo + tailwind: Serve site",
			"dependsOn": [
				"hugo: Serve site",
				"tailwind: Run with watch"
			],
			"dependsOrder": "parallel",
			"problemMatcher": []
		}
	]
}